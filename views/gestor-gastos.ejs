<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
    <%- include('load/index.ejs') %>

<body>
    <br>
    <br>
    <!-- Contenido principal -->
    <div class="main-content">
        <div class="container">
            <h1 class="text-center mb-4"><i class="bi bi-cash-stack"></i> Gestión de Gastos</h1>

            <!-- Botón para iniciar una nueva orden -->
            <div class="text-center mb-4" id="contenedorBtnNuevaOrden">
                <button class="btn btn-lg btn-success" id="btnNuevaOrden">
                    <i class="bi bi-plus-circle-dotted"></i> Nueva orden de gastos
                </button>
            </div>

            <!-- Área de trabajo para la orden activa (oculta por defecto) -->
            <div id="areaDeTrabajo" style="display: none;">
                <!-- Datos de la Orden Actual -->
                <div class="card form-card p-4 mb-4">
                    <h4 class="mb-3">Detalles de la Orden</h4>
                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            <label for="nombreOrden" class="form-label">Orden a nombre de:</label>
                            <input type="text" class="form-control" id="nombreOrden" placeholder="Ingresa tu nombre">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">ID de Orden:</label>
                            <p class="form-control-plaintext" id="idOrden"></p>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Fecha de Orden:</label>
                            <p class="form-control-plaintext" id="fechaOrden"></p>
                        </div>
                        <div class="col-md-4">
                            <label for="conceptoGastoOrden" class="form-label">Concepto General:</label>
                            <select class="form-select" id="conceptoGastoOrden">
                                <option value="comida">Comida</option>
                                <option value="insumo">Insumo</option>
                                <option value="servicio">Servicio</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="tipoGastoOrden" class="form-label">Tipo de Gasto:</label>
                            <select class="form-select" id="tipoGastoOrden">
                                <option value="Fijo casa">Fijo Casa</option>
                                <option value="variable negocio">Variable negocio</option>
                                <option value="deuda">Deuda</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="establecimientoOrden" class="form-label">Establecimiento:</label>
                            <input type="text" class="form-control" id="establecimientoOrden" placeholder="Ej: Tienda">
                        </div>
                         <div class="col-md-4">
                            <label for="metodoPagoOrden" class="form-label">Método de Pago:</label>
                            <select class="form-select" id="metodoPagoOrden">
                                <option value="efectivo">Efectivo</option>
                                <option value="tarjeta">Tarjeta</option>
                                <option value="transferencia">Transferencia</option>
                            </select>
                        </div>
                        <div class="col-md-8">
                            <label for="ticketOrden" class="form-label">Imagen del Ticket:</label>
                            <input type="file" class="form-control" id="ticketOrden" accept="image/*">
                        </div>
                         <div class="col-md-4">
                            <label for="montoTotalOrdenDisplay" class="form-label">Monto Total de la Orden:</label>
                            <input type="text" class="form-control fw-bold" id="montoTotalOrdenDisplay" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for="totalGastosDisplay" class="form-label">Total de Items:</label>
                            <input type="text" class="form-control" id="totalGastosDisplay" readonly>
                        </div>
                    </div>
				</div>

            <!-- Formulario para ingresar los datos -->
            <div class="card form-card p-4 mb-4">
                <div class="row g-3">

                    <!-- Campos para productos, solo si NO es servicio -->
                    <div id="camposProducto">
                        <hr>
                        <div class="input-form">
                            <div class="col-md-3">
                                <label class="form-label">Nombre: </label>
                                <input type="text" class="form-control" id="nombreProducto" placeholder="Ej: Arroz, Servicio de luz">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Unidades</label>
                                <input type="number" class="form-control" id="unidades" oninput="calcularMontoTotal()" min="1" value="1">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Medida</label>
                                <select class="form-control" id="medidaUnidad">
                                    <option value="" disabled>*medida de unidad*</option>
                                    <option value="litros">litros</option>
                                    <option value="Kilos">kilos</option>
                                    <option value="unidades">unidades</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Precio x Unidad</label>
                                <input type="number" class="form-control" id="precioUnidad" step="0.01" oninput="calcularMontoTotal()" min="0">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Monto Total</label>
                                <input type="number" class="form-control" id="montoTotal" step="0.01" readonly>
                            </div>
                        </div>
                    </div>
                    <!-- Campos para servicio, solo si ES servicio -->
                    <div id="camposServicio" style="display:none;">
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">Monto del servicio</label>
                                <input type="number" class="form-control" id="montoDeuda" min="0" placeholder="Ej: 1200">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 text-center mt-3">
                        <button class="btn btn-primary" onclick="validarYAgregarFila()" data-bs-toggle="tooltip" title="Agrega un nuevo gasto a la lista">
                            <i class="bi bi-plus-circle"></i> Agregar Gasto
                        </button>
                    </div>
                </div>
            </div>

            <!-- Filtros y búsqueda -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Buscar</label>
                            <input type="text" class="form-control" id="buscarGasto" placeholder="Buscar por establecimiento..." oninput="filtrarTabla()">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Filtrar por tipo</label>
                            <select class="form-select" id="filtroTipo" onchange="filtrarTabla()">
                                <option value="">Todos los tipos</option>
                                <option value="fijo negocio">Fijo Casa</option>
                                <option value="variable negocio">Variable negocio</option>
                                <option value="deuda">Deuda</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Ordenar por</label>
                            <select class="form-select" id="ordenarPor" onchange="ordenarTabla()">
                                <option value="fecha">Fecha (más reciente)</option>
                                <option value="monto-asc">Monto (menor a mayor)</option>
                                <option value="monto-desc">Monto (mayor a menor)</option>
                                <option value="nombre">Nombre (A-Z)</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tabla para mostrar los datos ingresados -->
            <div class="table-container">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover" id="tablaGastosCompleta">
                        <thead class="table-primary">
                            <tr>
                                <th>Tipo Gasto</th>
                                <th>Concepto Gasto</th>
                                <th>Establecimiento</th>
                                <th>Nombre Producto</th>
                                <th>Unidades</th>
                                <th>Medida</th>
                                <th>Precio x Unidad</th>
                                <th>Monto Total</th>
                                <th>Fecha</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="tablaGastos">
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Botones para reiniciar y enviar la tabla -->
            <div class="text-center mt-3 mb-5">
                <button class="btn btn-danger me-2" id="btnCancelarOrden" data-bs-toggle="tooltip" title="Cancela la orden actual y descarta los cambios">
                    <i class="bi bi-x-circle"></i> Cancelar Orden
                </button>
                <button class="btn btn-success me-2" id="btnFinalizarOrden" data-bs-toggle="tooltip" title="Guarda la orden completa en el sistema">
                    <i class="bi bi-check-circle"></i> Finalizar y Guardar Orden
                </button>
            </div>

            </div> <!-- Fin de areaDeTrabajo -->


        </div>
        <hr>

        <!-- Historial de Órdenes Guardadas -->
        <div class="container mt-5">
            <h2 class="text-center mb-4"><i class="bi bi-archive"></i> Historial de Órdenes</h2>
            <div class="table-container">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover" id="tablaOrdenes">
                        <thead class="table-primary">
                            <tr>
                                <th>ID de Orden</th>
                                <th>Nombre</th>
                                <th>Fecha</th>
                                <th>Total Gastado</th>
                                <th>Nº de Artículos</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="cuerpoTablaOrdenes">
                            <!-- Las órdenes se agregarán aquí dinámicamente -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Modal para ver detalles de la orden -->
        <div class="modal fade" id="modalDetallesOrden" tabindex="-1" aria-labelledby="modalDetallesOrdenLabel" aria-hidden="true">
          <div class="modal-dialog modal-xl">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="modalDetallesOrdenLabel">Detalles de la Orden</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
              </div>
              <div class="modal-body">
                <div class="mb-4 p-3 bg-dark rounded">
                    <p class="mb-1"><strong>ID de Orden:</strong> <span id="detalleOrdenId"></span></p>
                    <p class="mb-1"><strong>A nombre de:</strong> <span id="detalleOrdenNombre"></span></p>
                    <p class="mb-1"><strong>Fecha de la Orden:</strong> <span id="detalleOrdenFecha"></span></p>
                        <div class="col-md-4">
                            <label for="montoTotalOrdenDisplay" class="form-label form-label-sm">Monto Total de la Orden:</label>
                            <input type="text" class="form-control form-control-sm fw-bold" id="montoTotalOrdenDisplay" readonly>
                        </div>
                        <div class="col-md-4">
                            <label for="totalGastosDisplay" class="form-label form-label-sm">Total de Items:</label>
                            <input type="text" class="form-control form-control-sm" id="totalGastosDisplay" readonly>
                        </div>
                        <div class="col-md-4">
                            <!-- Se deja un espacio o se puede añadir otro campo si es necesario -->
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-primary">
                            <tr>
                                <th>Tipo Gasto</th>
                                <th>Concepto</th>
                                <th>Establecimiento</th>
                                <th>Producto/Servicio</th>
                                <th>Unidades</th>
                                <th>Medida</th>
                                <th>Precio Unitario</th>
                                <th>Monto Total</th>
                            </tr>
                        </thead>
                        <tbody id="cuerpoTablaDetallesOrden">
                            <!-- Los gastos de la orden se agregarán aquí -->
                        </tbody>
                    </table>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
              </div>
            </div>
          </div>
        </div>
        <hr>
        
        <!-- form para imagen -->
        <div class="container mt-4">
            <div class="form-container">
    <h2 class="text-center mb-4">Registro de Tickets</h2>
    
    <div class="form-item">
        <label class="form-label">Tipo de Gasto</label>
        <select class="form-select" id="tipoGastoImagen">
            <option value="fijo negocio">Fijo Casa</option>
            <option value="variable negocio">Variable negocio</option>
            <option value="deuda">Deuda</option>
        </select>
    </div>
    
    <div class="form-item">
        <label class="form-label">Concepto de Gasto</label>
        <select class="form-select" id="conceptoGastoImagen">
            <option selected disabled value="">Seleccione...</option>
            <option value="comida">comida</option>
            <option value="insumo">insumos</option>
            <option value="servicio">servicios</option>
        </select>
    </div>
    
    <div class="form-item">
        <label class="form-label">Establecimiento</label>
        <input type="text" class="form-control" id="establecimientoImagen" placeholder="Ej: Bodega">
    </div>
    
    <div class="form-item">
        <label class="form-label">Fecha</label>
        <input type="date" class="form-control" id="fechaGastoImagen">
    </div>
    
    <div class="form-item">
        <label class="form-label">Elige una imagen</label>
        <input type="file" class="form-control" id="imagenTicketInput" accept="image/*">
        <small class="form-text text-muted">Toma una foto a tu ticket de compra y subelo para tenerlo registrado.</small>
    </div>
    
    <button class="btn btn-success" type="button" id="btnGuardarTicket">
        <i class="bi bi-save"></i> Guardar Ticket
    </button>
                
                <!-- Tabla simplificada -->
                <div class="table-container">
                    <table class="table table-bordered" id="tablaTickets">
                        <thead>
                            <tr>
                                <th>Tipo</th>
                                <th>Concepto</th>
                                <th>Establecimiento</th>
                                <th>Fecha</th>
                                <th>Ticket</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="ticketsPreview">
                            <!-- Los datos se agregarán aquí dinámicamente -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Modal para visualizar tickets -->
        <div class="modal fade" id="modalTicket" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Ticket de Compra</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-center">
                        <img id="imagenModal" src="" class="img-fluid" alt="Ticket de compra">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Script de Bootstrap -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/gestor-gastos.js"></script>
    </div>
</body>
</html>